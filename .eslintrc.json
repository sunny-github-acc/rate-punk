{
  "extends": [
    "next",
    "prettier"
  ],
  "plugins": ["prettier"],
  "settings": {
    "next": {
      "rootDir": "src/app/page.tsx"
    }
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ],
    "no-unused-vars": "warn",
    "react/self-closing-comp": [
      "warn",
      {
        "component": true,
        "html": true
      }
    ]
  }
}